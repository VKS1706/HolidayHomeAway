@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Mvc.Filters

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Role Management</h2>

@if (!Model.Any())
{
    
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th>#Users</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">
                            Delete
                        </button>
                    </form> 
                </td>

            </tr>
        }

    </table>
}
<a class="btn btn-primary" asp-action="AddNewRole">Add New Role</a>