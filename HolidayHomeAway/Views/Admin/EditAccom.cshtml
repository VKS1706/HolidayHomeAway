@model AccomEditViewModel

<h2>Edit Accom</h2>

<form asp-controller="AccomManagement" asp-action="EditAccom" method="post" class="form-horizontal" role="form">
    <h4>Update the Accom details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Accom.Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.Id" class="form-control" />@*readonly="readonly"*@
            <span asp-validation-for="Accom.Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.Name" class="form-control" />
            <span asp-validation-for="Accom.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.ShortDescription" class="form-control" />
            <span asp-validation-for="Accom.ShortDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.LongDescription" class="form-control" />
            <span asp-validation-for="Accom.LongDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.Price" class="form-control" />
            <span asp-validation-for="Accom.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.ImageUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.ImageUrl" class="form-control" />
            <span asp-validation-for="Accom.ImageUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Accom.Availability" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Accom.Availability" class="form-control" />
            <span asp-validation-for="Accom.Availability" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Types" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="TypeId" class="form-control"
                    asp-items="Model.Types"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Update Accom" />
        </div>
    </div>
</form>

