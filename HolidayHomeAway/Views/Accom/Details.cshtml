@model Accom

<h2>@Model.Name</h2>

<div class="img-thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="fa-pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <p>@Model.AvailabilityType</p>
        <div class="addToCart">
            <p class="mdc-button">
                <a class="btn btn-primary"
                   asp-controller="Booking"
                   asp-action="AddToBooking"
                   asp-route-accomId="@Model.Id">Add to Booking</a>
            </p>
        </div>
    </div>
</div>