@using Microsoft.Win32.SafeHandles
@model EditRoleViewModel

<h2>Edit Role</h2>

<form asp-controller="Admin" asp-action="EditRole" method="post" role="form">
    <h4>Change the role details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Id" class="form-control" readonly="readonly"/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control"/>
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
</form>

<h3>Users in this role</h3>
<ul>
    @foreach (var user in Model.Users)
    {
        <li>
            @user
        </li>
    }
</ul>

<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-mdb-color">Add User to Role</a>
<a asp-action="DeleteUserFromRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Delete User from Role</a>
