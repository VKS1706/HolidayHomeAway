@model Accom
    <div class="row">
        <div class="card col-sm-4 col-lg-4 col-md-4">
            <div class="img-thumbnail">
                <img src="@Model.ImageUrl" alt="" />
                <div class="caption">
                    <h3 class="fa-pull-right">@Model.Price.ToString("c")</h3>
                    <h3>
                        <a asp-controller="Accom"
                           asp-action="Details"
                           asp-route-Id="@Model.Id">@Model.Name</a>
                    </h3>
                    <p>@Model.ShortDescription</p>
                </div>
                <div class="addToCart">
                    <p class="mdc-button">
                        <a class="btn btn-mdb-color"
                           asp-controller="Booking"
                           asp-action="AddToBooking"
                           asp-route-accomId="@Model.Id">Add To Booking</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
